<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans&display=swap" rel="stylesheet">
    <title>Document</title>
    <style>
        * {
            margin: 0px;
            padding: 0px;
        }

        .nav {
            position: relative;
            min-height: 50px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 0px;
            background-color: #222;
            border-color: #080808;
        }


        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
            ;
        }

        li {
            font-size: 25px;
            font-family: 'Work Sans', sans-serif;
            padding: 2px 8px;
        }

        li a {
            display: inline-block;
            text-align: center;
            text-decoration: none;
            padding: 2px 15px;
            color: white;
        }

        li a:hover {
            display: inline-block;
            text-align: center;
            text-decoration: none;
            padding: 2px 15px;
            color: gray;
        }

        .nav-text {
            display: inline-block;
            text-align: center;
        }

        .nav-text2 {
            text-align: center;
            float: right;
            padding-top: 7px;
        }

        .nav-text1 {
            display: inline-block;
            background-color: #111;
            text-align: center;
            font-size: 16px;
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: black;
            color: black;
            text-align: center;
            font-size: 20px;
        }

        .pimage {
            height: 150px;
            width: 150px;
        }

        .product {
            margin: 20px;
            display: inline-block;
        }

        .row_products {
            margin-top: 50px;
            float: right;
            width: 785px;
            margin-bottom: 5%;
        }

        .cat {
            display: inline-block;
            width: auto;
            margin-top: 100px;
            margin-left: 50px;
        }

        .list {
            background-color: white;
            color: black;
        }

        .list_item a {
            background-color: white;
            color: black;
        }

        .list_item a:hover {
            color: grey;
        }
    </style>
</head>

<body>
    <nav>
        <ul>
            <li class="nav-text1"><a href="/dash"><i class="fas fa-shopping-cart fa-2x"></i></a></li>
            <li class="nav-text"><a href="/dash">Home</a></li>
            <li class="nav-text"><a href="/contact">Contact</a></li>
            <li class="nav-text2"><a href="/logout">Logout</a></li>
            <li class="nav-text2"><a href="/cart/orders">Orders</a></li>
            <li class="nav-text2"><a href="/cart">MyCart</a></li>
        </ul>
    </nav>

    <div class="cat">
        <div style="color: black; font-size: 30px; margin-left: 8px; font-weight: bold;">CATEGORIES</div>
        <br>
      <ul class="list">
          <li class="list_item"><a href="/products">All products</a></li>
          <% categories.forEach(function(c){ %>
              <li class="list_item"><a href="/products/<%= c.name %>"><%= c.name %></a></li>
          <% }); %>
      </ul>
      </div>

    <div class="row_products">
      <% products.forEach(function(p){ %>
              <div class="product">
                  <a class="pa" href="/products/<%= p.category %>/<%= p._id %>">
                      <img class="pimage" src="/product_images/<%= p._id %>/<%= p.image %>" >
                  </a>
                  <h3><%= p.title %></h3>
                  <h4>Rs <%= p.price %></h4>
                  <a style="color:black" href="/products/<%= p.category %>/<%= p._id %>">View Details</a>
              </div>
          <% }); %>
      
  </div>

    </div>
    <div class="footer">madewithlove</div>


</body>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>

</html>